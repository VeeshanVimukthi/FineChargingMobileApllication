<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Outline: Add your desired stroke color and width here -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp" />
            <gradient


                android:startColor="@color/bt_c"
                android:endColor="@color/bt_c"
                android:angle="45"
                android:type="linear"
                />

            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
