<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.MapActivity">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_below="@+id/TF_location"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-95dp" />

    <ImageButton
        android:id="@+id/Back_btn"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:contextClickable="true"
        android:onClick="onClick"
        android:src="@drawable/back_arrow" />

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:hint="Search places"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/B_search"
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_above="@+id/mapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/TF_location"
        android:layout_toRightOf="@+id/TF_location"
        android:background="@android:color/transparent"
        android:contextClickable="true"
        android:onClick="onClick"
        android:src="@drawable/se1" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/B_post_office"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/postoffices" />

            <ImageButton
                android:id="@+id/B_lib"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/library" />
            <ImageButton
                android:id="@+id/B_hopistal"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/hospital1" />
            <ImageButton
                android:id="@+id/B_schools"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/schools" />
            <ImageButton
                android:id="@+id/B_restaurants"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/restaurant1" />

            <ImageButton
                android:id="@+id/B_gym"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/gym" />

            <ImageButton
                android:id="@+id/B_atm"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:onClick="onClick"
                android:src="@drawable/atm1" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>