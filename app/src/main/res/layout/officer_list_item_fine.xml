<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/successfulPaymentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        android:elevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textViewDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Name          : " />

            <TextView
                android:id="@+id/textViewLicenseNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Number   : " />

            <TextView
                android:id="@+id/textViewFineAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fine Amount          : " />

            <TextView
                android:id="@+id/textViewNatureOfOffence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nature of Offence : " />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date                         : " />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time                        : " />

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address                  : " />

            <TextView
                android:id="@+id/textViewVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Number    : " />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/Update"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/btn_blue"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/Delete"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/btn_blue"
                    android:text="Delete"
                    android:textColor="@color/textColorRed"
                    android:textSize="15sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/newCardView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/Green"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
